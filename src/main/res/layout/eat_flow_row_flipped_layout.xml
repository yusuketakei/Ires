<?xml version="1.0" encoding="utf-8"?>
<com.example.ty_en.ires.EventRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:background="@color/colorLightBlue400"
        android:text=""
        android:textAlignment="center"
        android:layout_marginRight="200dp"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="170dp"
        android:textSize="20dp"
        android:text="Delete now!"
        android:layout_alignParentRight="true"
        android:background="@color/colorLightBlue400"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:id="@+id/delete_text"
        />
</com.example.ty_en.ires.EventRelativeLayout>
