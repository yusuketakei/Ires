<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ty_en.ires.CheckActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Your Payment\nAnd Call Waiter With 'SUMIMASEN'"
        android:textSize="25dip"
        android:layout_centerHorizontal="true"
        android:id="@+id/check_label"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_label"
        android:layout_marginTop="15dp"
        android:id="@+id/total_row"
        android:background="@drawable/card_item_selector"
        >
        <TextView
            android:id="@+id/sub_total_label"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="@android:color/black"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:text="Sub Total："
            />
        <TextView
            android:id="@+id/sub_total"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/sub_total_label"
            android:layout_marginLeft="1dp"
            android:gravity="center_vertical"
            android:textSize="13dp"
            />
        <TextView
            android:id="@+id/tax_label"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="@android:color/black"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/sub_total_label"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:text="Tax Total："
            />
        <TextView
            android:id="@+id/tax"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="@android:color/black"
            android:layout_below="@+id/sub_total_label"
            android:layout_toRightOf="@+id/tax_label"
            android:layout_marginLeft="1dp"
            android:gravity="center_vertical"
            android:textSize="13dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tax_label"
            android:background="@color/colorGray200"
            >
        <TextView
            android:id="@+id/total_label"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="@android:color/black"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:text="Total："
            />
        <TextView
            android:id="@+id/total"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/total_label"
            android:layout_marginLeft="1dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="13dp"
            />
        </RelativeLayout>
    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/check_list"
        android:layout_below="@+id/total_row"
        android:layout_marginTop="20dp"/>
</RelativeLayout>
