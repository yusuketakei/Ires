<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ty_en.ires.EntranceActivity">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="いらっしゃいませ\nWelcome"
        android:id="@+id/welcome"
        android:textSize="40dp"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="How Many People ?"
        android:id="@+id/ask_people"
        android:layout_below="@id/welcome"
        android:layout_marginTop="20dip"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ask_people_spinner"
        android:layout_below="@+id/ask_people"
        android:background="@drawable/radius_spinner_selector"
        android:layout_marginTop="10dip"
        android:spinnerMode="dialog" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Do You Smoke ?"
        android:id="@+id/ask_smoke"
        android:layout_marginTop="20dip"
        android:layout_below="@id/ask_people_spinner"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ask_smoke_spinner"
        android:layout_below="@+id/ask_smoke"
        android:background="@drawable/radius_spinner_selector"
        android:layout_marginTop="10dip"
        android:spinnerMode="dialog" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/entrance_ok"
        android:layout_below="@+id/ask_smoke_spinner"
        android:layout_marginTop="45dip"
        android:background="@drawable/circle_button_selector"
        android:text="OK"
        android:textSize="30dip"
        />

</RelativeLayout>
