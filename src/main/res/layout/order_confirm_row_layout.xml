<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_item_selector">

    <TextView
        android:id="@+id/menu_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@android:color/black"
        android:textSize="13dp"
        />
    <ImageView
        android:id="@+id/menu_image"
        android:layout_below="@+id/menu_name"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/shadow"
        android:id="@+id/hr"
        android:layout_below="@+id/menu_image"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/counter_group"
        android:layout_below="@+id/hr">
        <TextView
            android:id="@+id/menu_price"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:layout_alignParentLeft="true"
            android:layout_toRightOf="@+id/menu_price_label"
            android:layout_marginLeft="1dp"
            android:gravity="center"
            android:textSize="11dp"
            />
        <TextView
            android:id="@+id/menu_order_count_label"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/menu_price"
            android:gravity="center"
            android:textSize="13dp"
            android:text="x"
            />
        <TextView
            android:id="@+id/menu_order_count"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/menu_order_count_label"
            android:gravity="center"
            android:textSize="13dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/shadow"
        android:id="@+id/shadow"
        android:layout_below="@+id/counter_group"/>
</RelativeLayout>
